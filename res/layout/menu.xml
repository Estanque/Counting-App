<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/header"
	    android:orientation="vertical">
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/app_name"
			android:layout_margin="20dp"
			android:textSize="@dimen/header_text_size"
			android:layout_gravity="center_horizontal"/>
		<View
			android:layout_width="fill_parent"
			android:layout_height="3dp"
			android:background="@android:color/darker_gray"/>
	    </LinearLayout>
	<LinearLayout
		android:orientation="vertical"
	    android:layout_height="match_parent"
	    android:layout_marginTop="@dimen/menu_margin"
	    android:layout_marginBottom="@dimen/menu_margin"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:layout_width="match_parent">
		<Button
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/menu_margin"
			android:layout_weight="1"
			android:text="@string/menu_begin"
			android:onClick="onClick"
			android:id="@+id/btnBegin"/>
		<Button
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_margin="@dimen/menu_margin"
			android:onClick="onClick"
			android:layout_weight="1"
			android:layout_gravity="center_horizontal"
			android:text="@string/menu_settings"
			android:id="@+id/btnSettings"/>
		<Button
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_margin="@dimen/menu_margin"
			android:layout_weight="1"
			android:onClick="onClick"
			android:layout_gravity="center_horizontal"
			android:text="@string/menu_statistic"
			android:id="@+id/btnStatistic"/>
		<Button
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_margin="@dimen/menu_margin"
			android:onClick="onClick"
			android:layout_weight="1"
			android:layout_gravity="center_horizontal"
			android:text="@string/menu_exit"
			android:id="@+id/btnExit"/>

	</LinearLayout>
</LinearLayout>